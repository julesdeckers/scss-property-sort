{
  "name": "css-property-sort",
  "displayName": "CSS & SCSS Property Sort",
  "description": "Extension for organizing and sorting CSS and SCSS properties",
  "version": "0.1.2",
  "publisher": "julesdeckers",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/julesdeckers/scss-property-sort.git"
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Linters",
    "Snippets",
    "Keymaps"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.sortSelectedProperties",
        "title": "Sort CSS/SCSS property list"
      }
    ],
    "keybindings": [
      {
        "command": "extension.sortSelectedProperties",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s",
        "when": "editorTextFocus && editorHasSelection && (resourceLangId == 'css' || resourceLangId == 'scss')"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/css": "^0.0.34",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  }
}